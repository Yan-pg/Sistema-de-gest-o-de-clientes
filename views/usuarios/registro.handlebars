<section id="form">
    <h3>Registre-se :)</h3>
    {{#each erros}}
        <div class="erros">
            <p><strong>{{texto}}</strong></p>
        </div>
    {{else}}
    {{/each}}   
    <div class="form-container">
        <div class="card-form">
            <form action="/registro" method="POST">
                    <input type="text" name="nome" placeholder="Digite seu nome." ><br>
                    <input type="text" name="email" placeholder="Digite seu email." ><br>
                    <input type="password" name="senha" placeholder="Digite sua senha."><br>
                    <input type="password" name="senha2" placeholder="Repita sua senha"><br>
                    <div class="back-project">
                            <a href="/">Voltar</a>    
                            <button class="button-margin" type="submit">Enviar</button>
                        </div>

            </form>
        </div>
    </div>
</section>